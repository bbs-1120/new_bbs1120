generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ========== NextAuth 認証用テーブル ==========

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime? @map("email_verified")
  image         String?
  role          String    @default("user") // user, admin
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ========== アプリケーション用テーブル ==========

model Media {
  id              String           @id @default(uuid())
  name            String           @unique
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")
  cpnDailyData    CpnDailyData[]
  judgmentResults JudgmentResult[]

  @@map("media")
}

model CpnDailyData {
  id        String   @id @default(uuid())
  cpnKey    String   @map("cpn_key")
  cpnName   String   @map("cpn_name")
  mediaId   String   @map("media_id")
  date      DateTime @db.Date
  spend     Decimal  @db.Decimal(12, 2)
  revenue   Decimal  @db.Decimal(12, 2)
  profit    Decimal  @db.Decimal(12, 2)
  roas      Decimal  @db.Decimal(8, 2)
  cv        Int      @default(0)
  mcv       Int      @default(0)
  cpm       Decimal  @db.Decimal(10, 2)
  cpc       Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  media     Media    @relation(fields: [mediaId], references: [id])

  @@unique([cpnKey, date])
  @@index([cpnKey])
  @@index([date])
  @@index([mediaId])
  @@map("cpn_daily_data")
}

model JudgmentResult {
  id                  String   @id @default(uuid())
  cpnKey              String   @map("cpn_key")
  cpnName             String   @map("cpn_name")
  mediaId             String   @map("media_id")
  judgmentDate        DateTime @map("judgment_date") @db.Date
  todayProfit         Decimal  @map("today_profit") @db.Decimal(12, 2)
  profit7Days         Decimal  @map("profit_7days") @db.Decimal(12, 2)
  roas7Days           Decimal  @map("roas_7days") @db.Decimal(8, 2)
  consecutiveLossDays Int      @map("consecutive_loss_days")
  judgment            String
  reasons             String[]
  recommendedAction   String   @map("recommended_action")
  manualOverride      String?  @map("manual_override")
  isSendTarget        Boolean  @default(false) @map("is_send_target")
  isRe                Boolean  @map("is_re")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")
  media               Media    @relation(fields: [mediaId], references: [id])

  @@unique([cpnKey, judgmentDate])
  @@index([judgmentDate])
  @@index([judgment])
  @@map("judgment_results")
}

model Setting {
  id          String   @id @default(uuid())
  key         String   @unique
  value       String
  description String?
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("settings")
}

model ExecutionLog {
  id           String   @id @default(uuid())
  executedAt   DateTime @default(now()) @map("executed_at")
  executedBy   String   @map("executed_by")
  actionType   String   @map("action_type")
  targetCount  Int      @map("target_count")
  ruleVersion  String   @map("rule_version")
  status       String
  errorMessage String?  @map("error_message")

  @@index([executedAt])
  @@map("execution_logs")
}

// ステータス変更の永続化（デバイス間共有用）
model StatusOverride {
  id         String   @id @default(uuid())
  cpnKey     String   @unique @map("cpn_key")
  cpnName    String   @map("cpn_name")
  media      String
  status     String   // ACTIVE or PAUSED
  changedAt  DateTime @default(now()) @map("changed_at")
  expiresAt  DateTime @map("expires_at") // 有効期限（24時間後）

  @@index([cpnKey])
  @@index([expiresAt])
  @@map("status_overrides")
}
